@model Projekt_DT102G.Models.BookCreateViewModel

@{
	ViewData["Title"] = "Create Book";
}

<h2 class="title">Create</h2>

<h4>Book</h4>
<hr />
<div class="row">
	<div class="col-md-9">
		<form enctype="multipart/form-data" asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group row">
				<label asp-for="Name" class="col-sm-2 col-form-label mr-1"></label>
				<div class="col-sm-10">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group row">
				<label asp-for="Description" class="col-sm-2 col-form-label  mr-1"></label>
				<div class="col-sm-10">
					<input asp-for="Description" class="form-control" />
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group row">
				<label asp-for="Author" class="col-sm-2 col-form-label  mr-1"></label>
				<div class="col-sm-10">
					<input asp-for="Author" class="form-control" />
					<span asp-validation-for="Author" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group row">
				<label asp-for="Price" class="col-sm-2 col-form-label  mr-1"></label>
				<div class="col-sm-10">
					<input asp-for="Price" class="form-control" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group row">
				<label asp-for="GenreId" class="col-sm-2 col-form-label  mr-1"></label>
				<div class="col-sm-10">
					<select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
				</div>
			</div>

			<div class="form-group row">
				<label asp-for="Photo" class="col-sm-2 col-form-label  mr-1"></label>
				<div class="col-sm-10">
					<div class="custom-file">
						<input asp-for="Photo" class="form-control custom-file-input" />
						<label class="custom-file-label">Choose File...</label>
					</div>
				</div>
			</div>

			<div class="form-group row">
				<label asp-for="Alt" class="col-sm-2 col-form-label  mr-1"></label>
				<div class="col-sm-10">
					<input asp-for="Alt" class="form-control" />
					<span asp-validation-for="Alt" class="text-danger"></span>
				</div>
			</div>


			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>

			@section Scripts {
				<script>
				
					$(document).ready(function () 
					{
						$('.custom-file-input').on("change", function ()
						{
							var fileName = $(this).val().split("\\").pop();
							$(this).next('.custom-file-label').html(fileName);
						});
					});
				</script>
				@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
			}
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>