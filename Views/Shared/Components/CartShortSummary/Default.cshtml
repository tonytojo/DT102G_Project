@*CartShortSummary Component*@

@model Cart

<div>
	@if (Model.OrderItems.Count() > 0)
	{
		<p class="navbar-text">
			<b>Cart:</b>
			@Model.OrderItems.Sum(x => x.Quantity) item(s)
			@Model.ComputeOrderValue().ToString("c")
		</p>
	}
	<a class="btn btn-sm btn-secondary navbar-btn"
	   asp-controller="Cart" asp-action="Index">
		<i class="fa fa-shopping-cart" style="font-size:28px"></i>
	</a>
</div>

